<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="alex.weathercharts.ActivityCharts">

    <FrameLayout android:id="@+id/fragTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:context=".FragmentTemperature" >

    </FrameLayout>

    <FrameLayout android:id="@+id/fragPressure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:context=".FragmentPressure" >
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:context=".FragmentHumidity" >
    </FrameLayout>

</LinearLayout>
